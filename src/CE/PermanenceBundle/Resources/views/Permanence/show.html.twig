{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Permanence</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ entity.libelle }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate | date("m/d/Y") }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ entity.endDate | date("m/d/Y") }}</td>
            </tr>
            <tr>
                <th>Allday</th>
                <td>{{ entity.allDay }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('permanence_management') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('permanence_management_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
